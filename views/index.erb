    <%# A method called logged_in? that returns true if a user is logged in and false if they're not  %>
    <% if logged_in? %>
    <a href="/logout">Click here to Log Out</a>
    <% else %>
    <a href="/login">Click here to Log In</a>
    <% end %>

    <%# Use iteration to manage lists of items %>
    <ul>
    <% squares = [1, 4, 9, 16] %>
    <% squares.each do |square| %>
    <li><%= square %></li>
    <% end %>
    </ul>
